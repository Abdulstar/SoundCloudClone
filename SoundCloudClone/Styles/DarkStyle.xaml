<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    x:Class="SoundCloudClone.Styles.DarkStyle"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Source="BaseStyle.xaml">
    <Color x:Key="StatusBarBackground">#1F1E20</Color>
    <Color x:Key="NavbarBackground">#111111</Color>
    <Color x:Key="NavigationPrimary">#1F1E20</Color>
    <Color x:Key="TextPrimaryColor">#CECECE</Color>
    <Color x:Key="DetailPrimaryColor">#CECECE</Color>
    <Color x:Key="TextSecondaryColor">#686868</Color>
    <Color x:Key="SeparatorItemBackground">#0F0E10</Color>
    <Color x:Key="ContentItemBackground">#201E20</Color>
    <Color x:Key="ContentPageBackground">#100F11</Color>

    <OnPlatform
        x:Key="SocialFrameBorderColor"
        x:TypeArguments="Color"
        Android="Transparent"
        iOS="#0F0E10" />

    <OnPlatform
        x:Key="NavigationBarTextColor"
        x:TypeArguments="Color"
        Android="#9D9D9D"
        iOS="#CBCBCC" />
</ResourceDictionary>
