<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="SoundCloudClone.Views.StreamView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms">
    <ContentPage.Resources>
        <ResourceDictionary>
            <OnPlatform
                x:Key="MarginItem"
                x:TypeArguments="Thickness"
                Default="15,0" />

            <OnPlatform
                x:Key="OverlayOpacity"
                x:TypeArguments="x:Double"
                Default="0.9" />

            <OnPlatform
                x:Key="OverlayThickness"
                x:TypeArguments="Thickness"
                Default="5" />

            <Style x:Key="OverlayLabel" TargetType="Label">
                <Setter Property="Padding" Value="{StaticResource OverlayThickness}" />
                <Setter Property="BackgroundColor" Value="Black" />
                <Setter Property="FontSize" Value="Large" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Opacity" Value="{StaticResource OverlayOpacity}" />
            </Style>

            <Style x:Key="OverlaySpan" TargetType="Span">
                <Setter Property="FontFamily" Value="{StaticResource FontLight}" />
                <Setter Property="BackgroundColor" Value="Black" />
                <Setter Property="FontSize" Value="Large" />
                <Setter Property="TextColor" Value="White" />
            </Style>

            <Style TargetType="Span">
                <Setter Property="FontFamily" Value="{StaticResource FontLight}" />
            </Style>

            <Style x:Key="SocialButton" TargetType="Button">
                <Setter Property="Margin" Value="5,0" />
                <Setter Property="Padding" Value="10,0" />
                <Setter Property="BorderColor" Value="#E5E5E5" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="TextColor" Value="#666566" />
            </Style>

            <Style
                x:Key="LastSocialButton"
                BasedOn="{StaticResource SocialButton}"
                TargetType="Button">
                <Setter Property="Margin" Value="5,0,0,0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Streams}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <FlexLayout Direction="Column" HeightRequest="360">

                        <FlexLayout
                            Margin="{StaticResource MarginItem}"
                            AlignItems="Center"
                            FlexLayout.Basis="80">
                            <Frame
                                Padding="0"
                                CornerRadius="25"
                                HeightRequest="50"
                                IsClippedToBounds="true"
                                WidthRequest="50">
                                <ffimageloading:CachedImage
                                    HeightRequest="50"
                                    Source="{Binding AvatarUrl}"
                                    WidthRequest="50" />
                            </Frame>

                            <StackLayout Margin="10,0,0,0">
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Username}" />
                                            <Span Text=" posted a track" TextColor="{StaticResource TextSecondaryColor}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <Label Text="{Binding CreatedAt}" TextColor="{StaticResource TextSecondaryColor}" />
                            </StackLayout>
                        </FlexLayout>

                        <Grid Margin="{StaticResource MarginItem}" FlexLayout.Basis="180">
                            <ffimageloading:CachedImage
                                Aspect="AspectFill"
                                HeightRequest="180"
                                Source="{Binding ArtworkUrl}" />

                            <StackLayout Margin="15,25" VerticalOptions="End">
                                <Label Style="{StaticResource OverlayLabel}" Text="{Binding Username}" />

                                <Label Opacity="{StaticResource OverlayOpacity}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Style="{StaticResource OverlaySpan}" Text="{Binding Title}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </StackLayout>
                        </Grid>

                        <FlexLayout
                            Margin="{StaticResource MarginItem}"
                            AlignItems="Center"
                            FlexLayout.Basis="40"
                            JustifyContent="SpaceBetween">
                            <Label Text="{Binding Genre, StringFormat='#{0}'}" TextColor="{StaticResource TextSecondaryColor}" />
                            <Label Text="{Binding FullDurationTimeSpan}" TextColor="{StaticResource TextSecondaryColor}" />
                        </FlexLayout>

                        <BoxView BackgroundColor="#E1E1E1" HeightRequest="1" />

                        <FlexLayout Margin="{StaticResource MarginItem}" FlexLayout.Basis="59">
                            <Button
                                Margin="0"
                                Padding="0"
                                BorderWidth="0"
                                ImageSource="stream_playback_count"
                                Style="{StaticResource SocialButton}"
                                Text="{Binding PlaybackCount, StringFormat='  {0}'}"
                                TextColor="{StaticResource TextSecondaryColor}" />

                            <FlexLayout
                                AlignItems="Center"
                                FlexLayout.Grow="1"
                                JustifyContent="End">

                                <Button
                                    ImageSource="stream_repost"
                                    Style="{StaticResource SocialButton}"
                                    Text="{Binding RepostsCount, StringFormat='  {0}'}" />

                                <Button
                                    ImageSource="stream_like"
                                    Style="{StaticResource SocialButton}"
                                    Text="{Binding LikesCount, StringFormat='  {0}'}" />

                                <Button ImageSource="stream_more" Style="{StaticResource LastSocialButton}" />
                            </FlexLayout>
                        </FlexLayout>
                    </FlexLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
