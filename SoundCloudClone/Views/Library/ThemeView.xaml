<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="SoundCloudClone.Views.Library.ThemeView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FlexItem" TargetType="FlexLayout">
                <Setter Property="BackgroundColor" Value="{DynamicResource ContentItemBackground}" />
                <Setter Property="Padding" Value="20,0" />
                <Setter Property="AlignItems" Value="Center" />
                <Setter Property="HeightRequest" Value="60" />
            </Style>

            <Style x:Key="DefaultItem" TargetType="Label">
                <Setter Property="FontSize" Value="Subtitle" />
                <Setter Property="Padding" Value="0" />
            </Style>

            <Style x:Key="SeparatorItem" TargetType="BoxView">
                <Setter Property="BackgroundColor" Value="{DynamicResource SeparatorItemBackground}" />
                <Setter Property="HeightRequest" Value="1" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <NavigationPage.TitleView>
        <Label
            Margin="{OnPlatform Android='0',
                                iOS='-40,0,0,0'}"
            Style="{StaticResource TitleNavigationPage}"
            Text="{OnPlatform Android='Application Theme',
                              iOS='Interface style'}" />
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="0">
                <CollectionView
                    ItemsSource="{Binding Options}"
                    SelectionChangedCommand="{Binding OptionSelectedCommand}"
                    SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <FlexLayout
                                AlignItems="Center"
                                JustifyContent="SpaceBetween"
                                Style="{StaticResource FlexItem}">
                                <Label Style="{StaticResource DefaultItem}" Text="{Binding Name}" />

                                <BoxView
                                    BackgroundColor="#FE5403"
                                    HeightRequest="20"
                                    IsVisible="{Binding IsSelected}"
                                    WidthRequest="20" />
                            </FlexLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!--
                <FlexLayout Margin="0,24,0,0" Style="{StaticResource FlexItem}">
                    <FlexLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLightThemeTapped" />
                    </FlexLayout.GestureRecognizers>

                    <Label Style="{StaticResource DefaultItem}" Text="Light" />
                </FlexLayout>
                <BoxView Style="{StaticResource SeparatorItem}" />

                <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                    <FlexLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDarkThemeTapped" />
                    </FlexLayout.GestureRecognizers>

                    <Label Style="{StaticResource DefaultItem}" Text="Dark" />
                </FlexLayout>
                <BoxView Style="{StaticResource SeparatorItem}" />
                -->
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
