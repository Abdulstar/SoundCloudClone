<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="SoundCloudClone.Views.Library.MoreView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FlexItem" TargetType="FlexLayout">
                <Setter Property="BackgroundColor" Value="{DynamicResource ContentItemBackground}" />
                <Setter Property="Padding" Value="20,0" />
                <Setter Property="AlignItems" Value="Center" />
                <Setter Property="HeightRequest" Value="60" />
            </Style>

            <Style x:Key="DefaultItem" TargetType="Label">
                <Setter Property="FontSize" Value="Subtitle" />
                <Setter Property="Padding" Value="0" />
            </Style>

            <Style x:Key="SeparatorItem" TargetType="BoxView">
                <Setter Property="BackgroundColor" Value="{DynamicResource SeparatorItemBackground}" />
                <Setter Property="HeightRequest" Value="1" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <NavigationPage.TitleView>
        <Label
            Margin="-40,0,0,0"
            Style="{StaticResource TitleNavigationPage}"
            Text="More" />
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ScrollView BackgroundColor="#100F11">
            <OnPlatform x:TypeArguments="View">
                <On Platform="Android">
                    <StackLayout Spacing="0">
                        <FlexLayout
                            Margin="0,24,0,0"
                            HeightRequest="160"
                            Style="{StaticResource FlexItem}">
                            <BoxView
                                BackgroundColor="#7F8B91"
                                CornerRadius="60"
                                HeightRequest="120"
                                WidthRequest="120" />

                            <StackLayout Margin="20,0,0,0" Spacing="0">
                                <Label Style="{StaticResource DefaultItem}" Text="ionixjunior" />
                                <Label
                                    Style="{StaticResource DefaultItem}"
                                    Text="View public profile"
                                    TextColor="{DynamicResource TextSecondaryColor}" />
                            </StackLayout>
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0,24,0,0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Activity" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Record" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Settings" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                            <Label
                                FlexLayout.Grow="1"
                                Style="{StaticResource DefaultItem}"
                                Text="Install SoundCloud Pulse app" />

                            <Label
                                Margin="0,0,5,0"
                                Style="{StaticResource DefaultItem}"
                                Text="for Creators"
                                TextColor="{DynamicResource TextSecondaryColor}" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0,24,0,0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Support" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Legal" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0,24,0,0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Sign out" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <Label
                            Margin="0,24,0,0"
                            HorizontalTextAlignment="Center"
                            Text="App version 2020.04.06-release (16090)"
                            TextColor="{DynamicResource TextSecondaryColor}" />

                        <Label
                            Margin="0,0,0,24"
                            HorizontalTextAlignment="Center"
                            Text="Flipper version 5.0.6"
                            TextColor="{DynamicResource TextSecondaryColor}" />
                    </StackLayout>
                </On>
                <On Platform="iOS">
                    <StackLayout Spacing="0">
                        <FlexLayout Margin="0,24,0,0" Style="{StaticResource FlexItem}">
                            <Label
                                FlexLayout.Grow="1"
                                Style="{StaticResource DefaultItem}"
                                Text="Your profile" />

                            <Label
                                Margin="0,0,5,0"
                                Style="{StaticResource DefaultItem}"
                                Text="ionixjunior"
                                TextColor="{DynamicResource TextSecondaryColor}" />
                            <Image Source="{DynamicResource library_arrow}" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                            <Label
                                FlexLayout.Grow="1"
                                Style="{StaticResource DefaultItem}"
                                Text="Settings" />
                            <Image Source="{DynamicResource library_arrow}" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Open SoundCloud Pulse app for Creators" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Restore subscription" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Tell a friend" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0,24,0,0" Style="{StaticResource FlexItem}">
                            <Label
                                FlexLayout.Grow="1"
                                Style="{StaticResource DefaultItem}"
                                Text="Troubleshooting" />
                            <Image Source="{DynamicResource library_arrow}" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Contact support" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0" Style="{StaticResource FlexItem}">
                            <Label
                                FlexLayout.Grow="1"
                                Style="{StaticResource DefaultItem}"
                                Text="Legal" />
                            <Image Source="{DynamicResource library_arrow}" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />

                        <FlexLayout Margin="0,24,0,0" Style="{StaticResource FlexItem}">
                            <Label Style="{StaticResource DefaultItem}" Text="Sign out" />
                        </FlexLayout>
                        <BoxView Style="{StaticResource SeparatorItem}" />
                    </StackLayout>
                </On>
            </OnPlatform>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>
